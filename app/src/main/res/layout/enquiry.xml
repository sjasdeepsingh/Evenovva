<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"


    android:orientation="vertical"

    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:text="Enquiry form"
        android:textSize="26sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible"

        tools:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/enq_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/enq_desc"
            android:layout_marginTop="17dp"
            android:background="#d67601"
            android:onClick="enqsubmit"
            android:text="SUBMIT"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/enq_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/enq_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/enq_person"
            android:layout_alignStart="@+id/enq_person"
            android:layout_below="@+id/enq_person"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Enter mobile "
            android:inputType="number" />

        <EditText
            android:id="@+id/enq_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/enq_sub"
            android:layout_alignStart="@+id/enq_sub"
            android:layout_below="@+id/enq_sub"
            android:layout_marginTop="29dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textLongMessage" />

        <EditText
            android:id="@+id/enq_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/enq_phone"
            android:layout_alignStart="@+id/enq_phone"
            android:layout_below="@+id/enq_phone"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:hint="Enter subject"
            android:inputType="text" />

        <EditText
            android:id="@+id/enq_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/enq_mobile"
            android:layout_alignStart="@+id/enq_mobile"
            android:layout_below="@+id/enq_mobile"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:hint="Enter phone number"
            android:inputType="phone" />
    </RelativeLayout>


</RelativeLayout>