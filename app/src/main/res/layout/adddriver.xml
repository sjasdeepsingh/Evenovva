<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"


    android:orientation="vertical"

    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:text="AddDriver"
        android:textColor="#fff"
        android:textSize="26sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible"

        tools:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/addrick"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dr_pwd"
            android:layout_marginTop="17dp"
            android:background="#d67601"
            android:onClick="addrick"
            android:text="Add Driver"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:hint="Enter driver name"
            android:inputType="textPersonName"

 />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userid"
            android:layout_alignStart="@+id/userid"
            android:layout_below="@+id/userid"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Enter Driver ID"
            android:inputType="number" />

        <EditText
            android:id="@+id/dr_rickno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dr_mob"
            android:layout_alignStart="@+id/dr_mob"
            android:layout_below="@+id/dr_mob"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:hint="Enter Driver Rikshaw Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/dr_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dr_rickno"
            android:layout_alignStart="@+id/dr_rickno"
            android:layout_below="@+id/dr_rickno"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="number" />

        <EditText
            android:id="@+id/dr_mob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pwd"
            android:layout_alignStart="@+id/pwd"
            android:layout_below="@+id/pwd"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Driver Number"
            android:inputType="number" />
    </RelativeLayout>


</RelativeLayout>